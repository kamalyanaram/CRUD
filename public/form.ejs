<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>

    <table class="table table-dark table-hover">
        <thead>
            <th scope="col">Id</th>
            <th scope="col">Film name</th>
            <th scope="col">Data</th>
        </thead>
        <tbody>
            <% info.forEach(function(justOne) { %>
          <tr class="table-active">
            <td><strong><%= justOne._id %></strong></td>
            <td><strong><%= justOne.name %></strong></td>
            <td><strong><%= justOne.data %></strong></td>
            <td><a class="update" href="update?id=<%= justOne._id %>">Update</a></td>
            <td><a class="delete" href="delete?id=<%= justOne._id %>">Delete</a></td>
          </tr>
          <% }); %>
        </tbody>
      </table>

    <form action="/addFilm" method="post" class="d-flex justify-content-center">
        <input id="usName" type="text" required name="name" placeholder="Please type the film name" class="me-2"><br><br>
        <input id="usData" type="date" name="data" placeholder="Please type the film data" class="me-2"><br><br>
        <input type="submit" >
    </form>

<script src="script.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>

</html>